{
  "name": "openapi-linter",
  "description": "OpenAPI Linter",
  "author": "Tyler Liu",
  "license": "MIT",
  "version": "0.2.0",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/tylerlong/vscode-openapi-linter"
  },
  "publisher": "chuntaoliu",
  "categories": [],
  "keywords": [
    "OpenAPI",
    "Spectral"
  ],
  "engines": {
    "vscode": "^1.65.0"
  },
  "activationEvents": [
    "onLanguage:yaml"
  ],
  "main": "./client/out/extension",
  "contributes": {},
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && yarn install && cd ../server && yarn install && cd ..",
    "test": "sh ./scripts/e2e.sh",
    "upgrade-all": "yarn yarn-upgrade-all && cd client && yarn yarn-upgrade-all && cd ../server && yarn yarn-upgrade-all && cd .."
  },
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.12.0",
    "mocha": "^9.2.2",
    "typescript": "^4.6.3",
    "vsce": "^2.7.0",
    "yarn-upgrade-all": "^0.7.1"
  }
}
